<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginRight="3dp"
                                    android:layout_marginBottom="1.5dp"
                                    android:clickable="true"
                                    app:cardCornerRadius="3dp"
                                    android:id="@+id/rl_songlist_item_view"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    app:cardElevation="1.5dp"
                                    app:cardMaxElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_songlist_data_index"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#777777"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_songlost_more"
            android:layout_width="48dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:padding="16dp"
            android:src="@mipmap/icon_more_vert"/>

        <TextView
            android:id="@+id/tv_songlist_data_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/iv_songlost_more"
            android:layout_toRightOf="@id/tv_songlist_data_index"
            android:gravity="center_vertical"
            android:textColor="#222222"
            android:textSize="16sp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>